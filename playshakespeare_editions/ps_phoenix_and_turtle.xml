  <titleStmt>
    <title type="common">Phoenix &amp; Turtle</title>
    <title type="main">The Phoenix and Turtle</title>
    <title type="short">Phoenix &amp; Turtle</title>
    <title type="abbr">Phoen</title>
    <title type="translated" xml:lang="ar">العنقاء والسلحفاة</title>
    <title type="translated" xml:lang="zh">凤凰和斑鸠</title>
